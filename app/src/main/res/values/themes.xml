    <style name="Base.Theme.Code" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/Blue</item>
        <item name="android:progressTint">#448aff</item>
        <item name="android:indeterminateTint">#448aff</item>
        <item name="android:statusBarColor">@color/Blue</item> <!-- 设置状态栏背景色为白色 -->
