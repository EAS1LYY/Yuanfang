    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="android:minWidth">30dp</item>
        <item name="android:maxHeight">45dp</item>
    </style>

    <style name="Theme.Code" parent="Base.Theme.Code" />
